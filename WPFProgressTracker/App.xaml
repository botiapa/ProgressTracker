<Application x:Class="WPFProgressTracker.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WPFProgressTracker"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            
            <!-- FONTS -->
            <FontFamily x:Key="Roboto">pack://application:,,,/Fonts/Roboto/#Roboto</FontFamily>
            <FontFamily x:Key="Roboto Black">pack://application:,,,/Fonts/Roboto/#Roboto Black</FontFamily>
            <FontFamily x:Key="Roboto Bold">pack://application:,,,/Fonts/Roboto/Bold/#Roboto</FontFamily>
            <FontFamily x:Key="Roboto Light">pack://application:,,,/Fonts/Roboto/#Roboto Light</FontFamily>
            <FontFamily x:Key="Roboto Medium">pack://application:,,,/Fonts/Roboto/#Roboto Medium</FontFamily>
            <FontFamily x:Key="Roboto Thin">pack://application:,,,/Fonts/Roboto/#Roboto Thin</FontFamily>
            
            <!-- THEMES -->
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Themes/Shared.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
